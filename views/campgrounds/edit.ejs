<%- include('../partials/header'); -%>

<div class="container mt-4">
    <div class="row">
        <div class="col"> </div>
        <div class="col-sm-10 col-lg-9">
            <div class="card shadow-lg rounded-0 border-0">
                <div class="card-body">
                    <h1 class="card-title text-center">Add New Campground</h1>
                    <p><small class="text-muted">Fields marked * are required.</small></p>
                    <form class="needs-validation" action="/components/<%= camp._id %>?_method=PUT" method="post" enctype="multipart/form-data" novalidate>
                        <div class="form-group">
                            <label class="required" for="username">Name</label>
                            <input class="form-control" type="text" name="name" value="<%= camp.name %>" required autofocus>
                            <div class="invalid-feedback">
                                Please enter campground name.
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="required" for="password">Price/Night</label>
                            <input class="form-control" type="number" name="price" value="<%= camp.price %>" min="0.01" step="0.01" required>
                            <div class="invalid-feedback">
                                Please enter valid price.
                            </div>
                        </div>
                        <div class="custom-file mb-3">
                            <input type="file" name="image" class="custom-file-input" id="imageFile" required>
                            <label class="custom-file-label" for="imageFile">Image*</label>
                            <div class="invalid-feedback">
                                Please select a campground image.
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="required" for="description">Description</label>
                            <textarea class="form-control" name="desc" id="description" required><%= camp.description %></textarea>
                            <div class="invalid-feedback">
                                Please enter campground description.
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="required" for="location">Location</label>
                            <input class="form-control" name="location" id="location" value="<%= camp.location %>" required>
                            <div class="invalid-feedback">
                                Please enter campground location.
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="required" for="phone">Phone Number</label>
                            <input id="mobile" type="number" class="form-control" name="phone" id="phone" value="<%= camp.phone %>" required>
                            <div class="invalid-feedback">
                                Please enter campground phone number.
                            </div>
                        </div>
                        <label class="required" for="booking">Booking Window</label>
                        <div class="form-row mb-0 pb-0">
                            <div class="form-group col-md-6 col-lg-6 col-12">
                                <input type="number" class="form-control" name="start" id="booking" value="<%= months.indexOf(camp.booking.start) %>" min="01" max="12" required>
                                <div class="invalid-feedback">
                                    Please enter month between 1 to 12.
                                </div>
                            </div>
                            <div class="form-group col-md-6 col-lg-6 col-12">
                                <input type="number" class="form-control" name="end" value="<%= months.indexOf(camp.booking.end) %>" min="01" max="12" required>
                                <div class="invalid-feedback">
                                    Please enter month between 1 to 12.                                        
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="tags">Amenities seperated by commas</label>
                            <input class="form-control" name="tags" id="tags" value="<%= camp.tags %>">
                        </div>
                        <div class="form-group">
                            <button id="custom-button" class="btn btn-md btn-primary btn-block">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col"> </div>
    </div>
</div>

<%- include('../partials/footer'); -%>