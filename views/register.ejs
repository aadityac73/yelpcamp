<%- include('partials/header'); -%>

<div class="container mt-5">
    <div class="row">
        <div class="col"> </div>
        <div class="col-sm-8 col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-0 border-0">
                <div class="card-body">
                    <h1 class="card-title text-center">Sign Up</h1>
                    <p><small class="text-muted">Feilds marked * are required.</small></p>
                    <form class="needs-validation" action="/register" enctype="multipart/form-data" method="post" novalidate>
                        <div class="form-group">
                            <label class="required" for="username">Name</label>
                            <input class="form-control" type="text" name="fullName" placeholder="Jake Ryan" required autofocus>
                            <div class="invalid-feedback">
                                Please enter your name.
                            </div>
                        </div>
                        <div class="custom-file mb-3">
                            <input type="file" name="image" class="custom-file-input" id="avatar">
                            <label class="custom-file-label" for="avatar">Avatar</label>
                        </div>
                        <div class="form-group">
                            <label class="required" for="username">Email</label>
                            <input class="form-control" type="email" name="email" placeholder="jake@mail.com" required>
                            <div class="invalid-feedback">
                                Please provide an email.
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="required" for="username">Username</label>
                            <input class="form-control" type="text" name="username" placeholder="jakeryan" required>
                            <div class="invalid-feedback">
                                Please choose a username.
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="username">Phone</label>
                            <input class="form-control" type="text" name="phone" placeholder="123-456-7890">
                        </div>
                        <div class="form-group">
                            <label class="required" for="password">Password</label>
                            <input class="form-control" type="password" name="password" required>
                            <div class="invalid-feedback">
                                Please enter password.
                            </div>
                        </div>
                        <div class="form-group">
                            <button id="custom-button" class="btn btn-md btn-primary btn-block">Sign Up</button>
                        </div>
                    </form>
                    <p class="text-center">Already have an account? <a href="/login">Login</a></p>
                </div>
            </div>
        </div>
        <div class="col"> </div>
    </div>
    
</div>

<%- include('partials/footer'); -%>